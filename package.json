{
  "name": "disco-schemas",
  "description": "JSON Schema schemas for Verifiable Credentials",
  "author": "Disco",
  "homepage": "https://disco.xyz",
  "repository": "discoxyz/disco-schemas",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist/",
    "prettier": "prettier --config .prettierrc.yaml --write --list-different './**/*.{ts,tsx,json,md}'",
    "prettier:lint": "prettier --config .prettierrc.yaml --list-different './**/*.{ts,tsx,json,md}'",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "publish-if-new-version": "if [ \"$(npm view vc-schema-tools@$npm_package_version)\" ]; then echo \"Version $npm_package_version already published\"; else npm publish; fi",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "ajv": "^8.7.1",
    "ajv-formats": "^2.1.1",
    "cross-fetch": "^3.1.4",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "@types/json-schema": "^7.0.11",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5"
  }
}
